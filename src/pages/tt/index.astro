                    </ul>
                </div>
            </div>
        </nav>
        <main class="flex-1 pt-[60px]">
            <App
                    client:load {...props}
            />
            <SEOContainer
                    firstIntroduce={en.SEOContainer.introduce.first}
                    secondIntroduce={en.SEOContainer.introduce.second}
                    featuresTitle={en.SEOContainer.feature.title}
                    featuresContents={en.SEOContainer.feature.contents}
                    FAQTitle={en.SEOContainer.faq.title}
                    FAQItems={en.SEOContainer.faq.items}
            />
        </main>
        <Footer/>
