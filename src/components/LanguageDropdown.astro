---
const {languages, redirect} = Astro.props;
---

<div id="dropdownNavbar"
     class="hidden w-full sm:w-96 font-normal bg-white rounded-lg shadow dark:bg-gray-700">
    <ul class="p-2 text-sm rounded-lg shadow text-gray-700 dark:text-gray-400 grid grid-cols-2 gap-x-4"
        aria-labelledby="dropdownLargeButton">
        {languages.map(language => (
                <li key={language.code}>
                    <a href={redirect !== null ? `${redirect}/${language.code}` : language.code}
                       class="flex items-center px-3 py-2 rounded-lg hover:bg-rose-300 text-rose-500 hover:text-white dark:hover:bg-gray-600 dark:hover:text-white">
                        {language.flag} {language.name}
                    </a>
                </li>
        ))}
    </ul>
</div>
