---
interface Props {
    id: string;
    question: string;
    answer: string;
    bgColor: string;
    textColor: string;
}

const {id, question, answer, bgColor, textColor} = Astro.props;
---

<div id=`accordion-flush-heading-${id}`
     itemscope
     itemprop="mainEntity"
     itemtype="https://schema.org/Question">
    <h2 itemprop="name">
        <button type="button"
                class={`flex items-center w-full p-5 font-medium ${bgColor ? bgColor : 'bg-rose-400 sm:hover:text-rose-500'} text-left text-white border border-gray-200 dark:border-gray-700 dark:text-gray-400 sm:hover:bg-white sm:hover:ring-1 ring-rose-500 sm:dark:hover:bg-gray-800`}
                data-accordion-target=`#accordion-flush-body-${id}`
                aria-expanded="false"
                aria-controls=`accordion-flush-body-${id}`>
            {question}
        </button>
    </h2>
    <div id=`accordion-flush-body-${id}`
         class="hidden"
         itemtype="https://schema.org/Answer"
         itemscope
         aria-labelledby=`accordion-flush-heading-${id}`
         itemprop="acceptedAnswer">
        <p class={`p-5 border border-t-0 border-gray-200 dark:border-gray-700 ${textColor ? textColor : 'text-rose-950'}`}
           itemprop="text">
            {answer}
        </p>
    </div>
</div>
