---
interface Props {
    key: number,
    question: string,
    answer: string
}

const {key, question, answer} = Astro.props;
---

<h2 key=`accordion-flush-heading-${key}`
    itemscope
    itemtype="https://schema.org/Question">
    <button type="button"
            class="flex items-center w-full p-5 font-medium bg-rose-400 text-left text-white border border-gray-200 dark:border-gray-700 dark:text-gray-400 hover:bg-white hover:text-rose-500 hover:ring-1 ring-rose-500  dark:hover:bg-gray-800"
            data-accordion-target=`#accordion-flush-body-${key}` aria-expanded="false"
            aria-controls=`accordion-flush-body-${key}`>
        {question}
    </button>
</h2>
<div key=`accordion-flush-body-${key}` class="hkeyden" aria-labelledby=`accordion-flush-heading-${key}`>
    <div class="p-5 border border-t-0 border-gray-200 dark:border-gray-700"
         itemscope
         itemtype="https://schema.org/Answer">
        <p class="text-rose-950">{answer}</p>
    </div>
</div>
